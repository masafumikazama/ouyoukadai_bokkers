<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), data: {"turbolinks" => false}, method: :delete, remote: true, class: "text-danger" do %>
      ♥<%= book.favorites.count %>
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to book_favorites_path(book), data: {"turbolinks" => false}, method: :post, remote: true do %>
      ♡<%= book.favorites.count %>
    <% end %>
  </p>
<% end %>
