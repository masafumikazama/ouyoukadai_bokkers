<% book.book_comments.each do |book_comment| %>
  <table class='table'>
    <tr>
      <td><%= link_to(book.user) do %>
        <%= image_tag book.user.get_profile_image, size:"50x50" %><br>
        <%= book_comment.user.name %>
        <% end %>
      </td>
      <td><%= book_comment.comment %></td>
      <% if book.user === current_user %>
        <td><%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
      <% end %>
    </tr>
  </table>
<% end %>
